@model IEnumerable<SkillTreeMVC.Models.AccountingViewModel>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{ 
                var count = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <th>@(++count)</th>
                        <th>@(item.Type == "0" ? "支出" : "收入")</th>
                        <th>@item.Date.ToString("yyyy-MM-dd")</th>
                        <th>@String.Format("{0:N0}", Convert.ToInt32(item.Amount))</th>
                    </tr>
                    
                }
            }
        </table>
    </div>
</div>
