@model SkillTreeMVC.Models.AccountingViewModel
@{
    ViewBag.Title = "我的記帳本";
    List<SelectListItem> typeSelectItems = new List<SelectListItem>();
    typeSelectItems.Add(new SelectListItem()
    {
        Text = "支出",
        Value = "0",
        Selected = true
    });
    typeSelectItems.Add(new SelectListItem()
    {
        Text = "收入",
        Value = "1",
        Selected = false
    });
}


<div class="well">
    @using (Html.BeginForm("", "", null, FormMethod.Post, new { @class="form-horizontal" }))
    { 
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(d => d.Category, typeSelectItems, new { @class = "form-control" })        
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                @Html.EditorFor(d=>d.Amount, new { htmlAttributes = new { @class = "form-control", @placeholder = "金額" } })
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                @Html.EditorFor(d => d.Date, new { htmlAttributes = new { @class = "form-control", @placeholder = "日期" } })
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(d=>d.Note, new {  htmlAttributes = new { @class = "form-control"}})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>
@Html.Action("_AccountingList")

